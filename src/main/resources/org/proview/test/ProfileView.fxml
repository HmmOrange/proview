      <VBox BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="avatarImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label fx:id="nameField" contentDisplay="CENTER" prefHeight="23.0" prefWidth="163.0" text="Name" textAlignment="CENTER">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="emailField" alignment="BOTTOM_LEFT" text="Email">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Button fx:id="editProfileButton" mnemonicParsing="false" onAction="#onEditProfileButtonClick">
                     <graphic>
                        <FontIcon iconLiteral="far-edit" iconSize="24">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </FontIcon>
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </HBox>
            <VBox fx:id="recentActivityListVBox" prefWidth="300.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane>
         <content>
            <VBox fx:id="innerVbox">
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="56.0" prefWidth="933.0">
                     <children>
                        <Button fx:id="cardButton" mnemonicParsing="false" onAction="#onCardButtonClicked" styleClass="view-button" />
                        <Button fx:id="compactButton" mnemonicParsing="false" onAction="#onCompactButtonClicked" styleClass="view-button">
                           <HBox.margin>
                              <Insets right="100.0" />
                           </HBox.margin>
                        </Button>
                     </children></HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <stylesheets>
      <URL value="@styles/styles.css" />
      <URL value="@styles/ProfileView.css" />
   </stylesheets>
