<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proview.test.AdminView">
   <children>
      <ListView fx:id="documentList" prefHeight="200.0" prefWidth="200.0" />
      <TabPane>
         <tabs>
            <Tab closable="false" text="Add">
               <content>
                  <VBox alignment="CENTER" spacing="20.0">
                      <padding>
                          <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                      </padding>
                     <TextField fx:id="documentAddName" promptText="Book name" />
                     <TextField fx:id="documentAddAuthor" promptText="Author" />
                     <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Button fx:id="addButton" onAction="#onAddButtonClick" text="Add">
                              <HBox.margin>
                                 <Insets right="20.0" />
                              </HBox.margin>
                           </Button>
                           <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutButtonClick" text="Logout">
                              <HBox.margin>
                                 <Insets left="20.0" />
                              </HBox.margin>
                           </Button>
                        </children>
                     </HBox>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Remove">
               <content>
                  <VBox alignment="CENTER" spacing="20.0">
                     <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </padding>
                     <children>
                        <TextField fx:id="documentRemoveID" promptText="ID" />
                        <Button onAction="#onRemoveButtonClick" text="Remove!">
                           <VBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</HBox>
